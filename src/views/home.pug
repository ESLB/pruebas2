
extends ./layouts/header.pug

block container

  .container-fluid.carouselContainer
    .row
      .col-12.col-sm-12.col-md-9
        .carousel.slide(id="carouselExampleIndicators", data-ride="carousel")
          ol.carousel-indicators
            li.active(data-target="#carouselExampleIndicators", data-slide-to="0")
            li(data-target="#carouselExampleIndicators", data-slide-to="1")
            li(data-target="#carouselExampleIndicators", data-slide-to="2")

          .carousel-inner
            .carousel-item.active
              img.d-block.w-100(src="images/events/SUP-weekend.jpg", alt="First slide")
            .carousel-item
              img.d-block.w-100(src="images/events/Raspberry.jpg", alt="Second slide")
            .carousel-item
              img.d-block.w-100(src="images/events/Impresion-3D.jpg", alt="Third slide")
          
          a.carousel-control-prev(href="#carouselExampleIndicators", role="button", data-slide="prev")
            span.carousel-control-prev-icon(aria-hidden="true")
            span.sr-only Previous

          a.carousel-control-next(href="#carouselExampleIndicators", role="button", data-slide="next")
            span.carousel-center-next-icon(aria-hidden="true")
            span.sr-only Next
      .col-12.col-sm-6.col-md-3
        .row
          img.img-article(src="images/events/Arduino-Day.jpg", alt="img1",data-toggle="modal", data-target="#exampleModal")
        .row
          img.img-article(src="images/events/Constructora-exito.jpg", alt="img1")
        .row
          img.img-article(src="images/events/IV-encuentro-Investigacion.jpg", alt="img1")
      .col-12.col-sm-6.col-md-3
        .row
          img.img-article(src="images/events/Arduino-Day.jpg", alt="img1")
        .row
          img.img-article(src="images/events/Constructora-exito.jpg", alt="img1")
        .row
          img.img-article(src="images/events/IV-encuentro-Investigacion.jpg", alt="img1")

  .modal.fade(id="exampleModal", tabindex="-1", role="dialog", aria-labelledby="exampleModalLabel", aria-hidden="true")
    .modal-dialog(role="document")
      .modal-content
        .modal-header
          h5.modal-title(id="exampleModalLabel") Rob√≥tica e Internet de las Cosas
          button.close(type="button",data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &times;
        .modal-body
          span hola mundo
        .modal-footer
          button.btn.btn-secondary(type="button",data-dismiss="modal") Close
          button.btn.btn-primary(type="button") Save changes
      
