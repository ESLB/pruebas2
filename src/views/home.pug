
extends ./layouts/header.pug

block container

  .container-fluid
    .row
      .col-12.col-sm-12.col-md-9
        .carousel.slide(id="carouselExampleIndicators", data-ride="carousel")
          ol.carousel-indicators
            li.active(data-target="#carouselExampleIndicators", data-slide-to="0")
            li(data-target="#carouselExampleIndicators", data-slide-to="1")
            li(data-target="#carouselExampleIndicators", data-slide-to="2")

          .carousel-inner
            .carousel-item.active
              img.d-block.w-100(src="images/events/SUP-weekend.jpg", alt="First slide")
            .carousel-item
              img.d-block.w-100(src="images/events/Raspberry.jpg", alt="Second slide")
            .carousel-item
              img.d-block.w-100(src="images/events/Impresion-3D.jpg", alt="Third slide")
          
          a.carousel-control-prev(href="#carouselExampleIndicators", role="button", data-slide="prev")
            span.carousel-control-prev-icon(aria-hidden="true")
            span.sr-only Previous

          a.carousel-control-next(href="#carouselExampleIndicators", role="button", data-slide="next")
            span.carousel-control-next-icon(aria-hidden="true")
            span.sr-only Next
      .col-12.col-sm-5.col-md-3
        .row
          img.img-article(src="images/events/Arduino-Day.jpg", alt="img1")
        .row
          img.img-article(src="images/events/Constructora-exito.jpg", alt="img1")
        .row
          img.img-article(src="images/events/IV-encuentro-Investigacion.jpg", alt="img1")




